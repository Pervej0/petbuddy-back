generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  AdoptionReques AdoptionReques[]

  @@map("users")
}

model Pet {
  id                   String           @id @default(uuid())
  name                 String
  species              String
  breed                String
  age                  Int
  size                 petSizee
  location             String
  description          String
  temperament          String
  medicalHistory       String
  adoptionRequirements String
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
  AdoptionReques       AdoptionReques[]
}

enum petSizee {
  small
  medium
  large
}

model AdoptionReques {
  id                     String               @id @default(uuid())
  user                   User                 @relation(fields: [userId], references: [id])
  userId                 String
  pet                    Pet                  @relation(fields: [petId], references: [id])
  petId                  String
  status                 AdoptionRequesStatus @default(PENDING)
  petOwnershipExperience String
  createdAt              DateTime             @default(now())
  updatedAt              DateTime             @updatedAt
}

enum AdoptionRequesStatus {
  PENDING
  APPROVED
  REJECTED
}
